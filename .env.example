COMPOSE_PROJECT_NAME=k100

# Container settings
RESTART=always
TZ=Europe/Warsaw

# Project settings
PROJECT_NAME="Komornicka 100"

# Environment settings

# +++++++++++++++++++++++++++++++++++++
# +++ DEV +++
#
ENVIRONMENT=development
FRONTEND_URL=http://localhost:3000
API_URL=http://localhost:8000
SMTP_SERVER=mailpit
SMTP_PORT=1025
SMTP_FROM=k100@localhost
SMTP_USERNAME=k100@localhost
SMTP_PASSWORD=password
